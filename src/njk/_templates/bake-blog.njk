{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ name }} by Capt. Crit McGillicutty{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
        <img src="../img/{{ imagebw }}" alt="pirate character" class="img-fluid">
        <p class="byline">{{ name }}<br>
        <span>{{ instruments }}</span></p>
        <hr class="d-sm-none">
      </div>
      <div class="col-sm-8">
        <img src="../img/{{ image }}" alt="" class="img-fluid mb-4">
        <h1>{{ name }}</h1>
        <p> {{ instruments }} </p>
        <p> {{ tenure }} </p>
        <p> {{ birthplace }} </p>
        <p> {{ birthdate }} </p>
        <p> {{ description }} </p>

      </div>
    </div>
  </article>
{% endblock %}